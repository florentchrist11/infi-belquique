<div class="col mt-6">
    <!-- card -->
    <div class="card rounded-3">
        <!-- card body -->
        <div class="card-body">
            <!-- heading -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h4 class="mb-0">{{ title }}</h4>
                </div>
                <div class="icon-shape icon-md bg-light-primary text-primary rounded-1">
                    <i class="{{ icon }}"></i>
                </div>
            </div>
            <!-- project number -->
            <div>
                <h1 class="fw-bold">{{ value }}</h1>
                <p class="mb-0"><span class="text-dark me-2"></span>{{ desc }}</p>
            </div>
        </div>
    </div>
</div>